<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dipitvasdev.FoodRush">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_main_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dipitvasdev.FoodRush.activities.OtpActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.OrderHistoryActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.CartActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.OrderConfirmed" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.MenuActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.HomeActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.ForgotActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.RegisterActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.LoginPageActivity" />
        <activity android:name="com.dipitvasdev.FoodRush.activities.SpashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>